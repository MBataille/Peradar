#: kivy 1.0.9

<LoadFloatLayout>:
    id: load_float_layout
    label_text: "Buscando "
    index: ""
    Label:
        font_size: 40 
        size_hint: None, None
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        halign: 'center'
        text: load_float_layout.label_text
    LoadBall:
        radius: load_float_layout.height / 8
        size_hint: None, None
        center: load_float_layout.center
<SearchScreen>:
    box_layout: load_box_layout
    BoxLayout:
        orientation: 'horizontal'
        id: load_box_layout

<RamoLayout>:
    orientation: 'horizontal'
    spacing: 20
    Label:
        font_size: 26
        size_hint: 0.4, 1
        text: self.parent.ramo_name
    ControlesLayout:
        id: controles_layout
        orientation: 'horizontal'
        size_hint: 0.6, 1
<InfoScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        Label:
            text: root.infoText
            font_size: 24
            size_hint: 1, 0.3

        ListaRamosLayout:
            id: listaRamos_layout
            size_hint: 1, 0.6
            orientation: 'vertical'               

        BoxLayout:
            size_hint: 1, 0.1
            orientation: 'horizontal'
            Button:
                on_press: root.go_back()
               # on_press: root.manager.current= 'login' 
                text: 'Atras'
                font_size: 28
                color: (.75,.75,.75,1) # light grey
                size_hint: 0.3,1
            Button:
                text: 'Siguiente'
                on_press: root.go_forward()
                font_size: 28
                color: (.75, .75, .75, 1)
                size_hint: 0.7,1

<LoginScreen>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Peradar'
            font_size: 40

        Label:
            id: login_info
            text: root.login_info_text
            font_size: 20

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                write_tab: False
                multiline:False
                font_size: 20

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Contrase√±a'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            id: submit_button
            text: 'Ingresar'
            font_size: 24
            on_press: root.changeScreen()
<LoadBall>:
    size: 25,25
    angle: 90
    radius: root.height/8
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size 
<LoadScreen>:
    ball: load_ball
    FloatLayout:
        id: layout
        LoadBall:
            id: load_ball
            center: root.center
            radius: root.height / 8
            angle: 90
            size_hint: None, None       
        Label:
            font_size: 50 
            size_hint: None, None
            center_x: layout.width / 2
            center_y: layout.height / 4
            text: "Cargando..."